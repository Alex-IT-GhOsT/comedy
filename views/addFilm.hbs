<form method="post" action="/addFilmSuccess">
<div>
        <p style="text-align: center;">Добавить фильм</p>
        <div class="edit">
            <div class="edit_1">
                <label for="title">название фильма</label>
            </div>
            <div class="edit_2">
                <input type="text" name="title" placeholder="название фильма" >
            </div>
        </div>
        <div class="edit">
            <div class="edit_1">
                <label for="rate">рэйтинг</label>
            </div>
            <div class="edit_2">
                <input type="number" name="rate" placeholder="рэйтинг">
            </div>
        </div>

        <div class="edit"> 
            <div class="edit_1">
                <label for="year">год</label>
            </div>
            <div class="edit_2">
                <input type="number" name="year" placeholder="год">
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="country">страна</label>
            </div>
            <div class="edit_2">
                <input type="text" name="country" placeholder="страна">
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="genre">жанр</label>
            </div>
            <div class="edit_2">
                <input type="text" name="genre" placeholder="жанр" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="duration">длительность</label>
            </div>
            <div class="edit_2">
                <input type="number" name="duration" placeholder="длительность" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="premiere">премьера</label>
            </div>
            <div class="edit_2">
                <input type="text" name="premiere" placeholder="премьера" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="quality">качество</label>
            </div>
            <div class="edit_2">
                <input type="text" name="quality" placeholder="качество" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="full_description">полное описание</label>
            </div>
            <div class="edit_2">
                <textarea  name="full_description" placeholder="полное описание" rows="4" cols="50"></textarea>
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="short_description">короткое описание</label>
            </div>
           <div class="edit_2">
                <textarea  name="short_description" placeholder="короткое описание" rows="4" cols="50"></textarea>
           </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="img">картинка</label>
            </div>
            <div class="edit_2">
                <input type="text" name="img" placeholder="картинка">
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="url">url фильма</label>
            </div>
            <div class="edit_2">
                <input type="text" name="url" placeholder="url фильма" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="actors">актеры</label>
            </div>
            <div class="edit_2">
                <textarea name="actors"placeholder="актеры" rows="4" cols="50"></textarea>
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="director">директор</label>
            </div>
            <div class="edit_2">
                <input type="text" name="director"placeholder="директор">
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="totalVotes">голоса</label>
            </div>
            <div class="edit_2">
                <input type="number" name="totalVotes" placeholder="голоса" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="totalRating">общий рейтинг</label>
            </div>
            <div class="edit_2">
                <input type="number" name="totalRating" placeholder="общий рейтинг" >
            </div>
        </div>

        <div class="edit">
            <div class="edit_1">
                <label for="averageRating">средний рейтинг</label>
            </div>
            <div class="edit_2">
                <input type="number" name="averageRating" placeholder="средний рейтинг">
            </div>
        </div>
        <div>
            <input type="submit" name="add" value="Добавить фильм">
        </div>
</div>
</form>
